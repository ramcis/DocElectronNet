@model VarDoc.ViewModels.ConxString

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<link rel="stylesheet" href="~/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
<!-- Toastr -->
<link rel="stylesheet" href="~/plugins/toastr/toastr.min.css">

<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

<script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>
<!-- Toastr -->
<script src="~/plugins/toastr/toastr.min.js"></script>

<h2 class="text-warning">
    <i class="nav-icon fas fa-database"></i>
    Configuration
</h2>

<hr />

<div class="row">
    <div class="col-sm-10">
        <form asp-action="ConvertFile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AllowedHosts" class="control-label">Host</label>
                <input type="text" asp-for="AllowedHosts" value="*" class="form-control" readonly />
                <span asp-validation-for="AllowedHosts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConnectionStrings" class="control-label">Base de Données</label>
                <input type="hidden" name="ConnectionStrings[0].Key" value="DevConnection" />
                <input type="text" name="ConnectionStrings[0].Value" class="form-control" placeholder="Server=localhost;Database=dbpatients;User=newuser;Password=root;CharSet=utf8;SslMode=None;" />
                <span asp-validation-for="ConnectionStrings" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Confirmer" class="btn btn-warning toastrDefaultSuccess" />
                <a type="button" class="btn btn-default" asp-action="Index">Retour</a>
            </div>
        </form>
    </div>
</div>
<script>
    $(function () {
        var Toast = Swal.mixin({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000
        });
        $('.toastrDefaultSuccess').click(function () {
            toastr.success('Lorem ipsum dolor sit amet, consetetur sadipscing elitr.')
        });
    })
</script>
