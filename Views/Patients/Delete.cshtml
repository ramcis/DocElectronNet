@model VarDoc.Models.Patients

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h2 class="text-danger">
    <i class="fas fa-exclamation-triangle"></i>
    Suppression!!
</h2>
<h3><strong>Etes vous sur de vouloir supprimer ce patient?</strong></h3>
<h4>
    <i class="fas fa-exclamation-triangle"></i>
    Attention, ça va aussi supprimer toutes les fiches lier à ce patient !!
</h4>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nom_patient)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nom_patient)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.prenom_patient)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.prenom_patient)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.pere_patient)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.pere_patient)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.tel_patient)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.tel_patient)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.fiche_patient)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fiche_patient)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.date_naissance)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.date_naissance)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id_patient" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        <a type="button" class="btn btn-default" asp-action="Index">Retour</a>
    </form>
</div>
